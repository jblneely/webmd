<h1 class="text-center">Enter a new symptom</h1>

<form method="post" action="/symptoms">
	<div class="form-group">
		<label>NAME</label>
		<input type="text" name="name" placeholder="what is the symptom" class="form-control">
	</div>
	<div class="form-group">
		<label>DESCRIPTION</label>
		<textarea name="description" class="form-control"></textarea>
	</div>
	<div class="form-group">
		<label>SEVERITY</label>
		<input type="text" name="severity" placeholder="How bad?" class="form-control">
	</div>
	<div class="form-group">
		<label>AFFECTED SYSTEMS</label>
		<input type="text" name="affected systems" placeholder="where?" class="form-control">
	</div>
	<input type="submit" class="btn btn-success" value="CREATE!">
</form>